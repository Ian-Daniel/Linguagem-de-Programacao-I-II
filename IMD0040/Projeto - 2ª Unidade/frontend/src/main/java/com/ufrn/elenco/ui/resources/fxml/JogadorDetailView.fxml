<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ufrn.elenco.ui.controllers.JogadorController"
      spacing="10"
      style="-fx-padding: 16;">

    <children>
        <Label text="Detalhes do Jogador"
               style="-fx-font-size: 20; -fx-font-weight: bold;"/>

        <Label fx:id="lblJogadorNome"
               text="Nome: "
               style="-fx-font-size: 16;"/>

        <Label fx:id="lblJogadorIdade"
               text="Idade: "
               style="-fx-font-size: 14;"/>

        <Label fx:id="lblJogadorPosicao"
               text="Posição: "
               style="-fx-font-size: 14;"/>
    </children>
</VBox>
